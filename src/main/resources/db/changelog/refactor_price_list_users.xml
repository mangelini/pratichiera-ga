<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <!-- 1. Create the join table for the ManyToMany relationship -->
    <changeSet id="2026021101-1" author="matt">
        <createTable tableName="price_list_users">
            <column name="price_list_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="price_list_users" columnNames="price_list_id, user_id"
                       constraintName="pk_price_list_users"/>
        <addForeignKeyConstraint baseTableName="price_list_users" baseColumnNames="price_list_id"
                                 constraintName="fk_plu_price_list" referencedTableName="price_lists"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="price_list_users" baseColumnNames="user_id"
                                 constraintName="fk_plu_user" referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- 2. Drop the old user_id FK and column from price_lists -->
    <changeSet id="2026021101-2" author="matt">
        <dropForeignKeyConstraint baseTableName="price_lists" constraintName="FK_PRICE_LISTS_ON_USER"/>
        <dropColumn tableName="price_lists" columnName="user_id"/>
    </changeSet>

    <!-- 3. Add a name column to price_lists -->
    <changeSet id="2026021101-3" author="matt">
        <addColumn tableName="price_lists">
            <column name="name" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
