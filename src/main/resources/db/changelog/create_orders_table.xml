<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-order-sequence" author="pratichiera">
        <createSequence sequenceName="order_sequence" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="create-orders-table" author="pratichiera">
        <createTable tableName="orders">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_user" references="users(id)"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-order-item-sequence" author="pratichiera">
        <createSequence sequenceName="order_item_sequence" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="create-order-items-table" author="pratichiera">
        <createTable tableName="order_items">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_item_order" references="orders(id)"/>
            </column>
            <column name="product_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="packaging" type="VARCHAR(255)"/>
            <column name="notes" type="VARCHAR(255)"/>
            <column name="price_per_kg" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
