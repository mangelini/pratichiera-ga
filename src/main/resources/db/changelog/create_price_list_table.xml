<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1770815957167-3" author="matt">
        <createSequence incrementBy="50" sequenceName="price_list_seq" startValue="1"/>
    </changeSet>

    <changeSet id="1770815957167-4" author="matt">
        <createTable tableName="price_lists">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_price_lists"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="reference_month" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="closed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1770815957167-5" author="matt">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="price_lists"
                                 constraintName="FK_PRICE_LISTS_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>